<p id="notice"><%= notice %></p>

<h1>Mi Perfil</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Edad</th>
      <th>Profesion</th>
      <th>Pais</th>
      <th>Correo</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @profiles.each do |profile| %>
      <% if profile.user == current_user %>
        <tr>
          <td><%= profile.nombre %></td>
          <td><%= profile.edad %></td>
          <td><%= profile.profesion %></td>
          <td><%= profile.pais %></td>
          <td><%= profile.correo %></td>
          <td><%= link_to 'Show', profile %></td>
          <td><%= link_to 'Edit', edit_profile_path(profile) %></td>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>

<br>
<% if current_user.profile.nil? %>
  <%= link_to 'New Profile', new_profile_path %>
<% end %>